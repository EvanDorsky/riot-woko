<wiki>
	<wiki-header></wiki-header>

  <wiki-flex>
  	<article-list></article-list>
  	<article></article>
  </wiki-flex>
</wiki>

<!-- Includes -->

<script src="/views/wiki.tag" type="riot/tag"></script>
<script src="/views/wiki-header.tag" type="riot/tag"></script>
<script src="/views/article-list.tag" type="riot/tag"></script>
<script src="/views/article.tag" type="riot/tag"></script>
<script src="/views/raw.tag" type="riot/tag"></script>

<script src="//cdn.jsdelivr.net/g/riot@2.0(riot.min.js+compiler.min.js)"></script>
<script src="javascripts/marked.js"></script>

<script>
$.get('/article').done(function(articles) {
	riot.mount('*', {
		articles: articles || null,
		article: articles? articles[0] : null,
		authed: articles? true : false
	})
}).error(console.error)
</script>