font-size = 18px

doc-font()
  font-family 'Open Sans', serif
  font-weight 300
  font-size font-size

// gist.github.com/d3vron/1080346
vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

flex-flow()
  vendor('flex-flow', arguments)

flex()
  vendor('flex', arguments)

align-items()
  vendor('align-items', arguments)

align-self()
  vendor('align-self', arguments)

gradient()
  vendor('gradient', arguments)

border-image()
  vendor('border-image', arguments)

*
  margin 0
  padding 0
  
h1, h2, h3, h4, h5, h6
  font-weight 300

html, body
  height 100%

body
  doc-font()

button
  doc-font()
  cursor pointer
  display inline-block
  border none
  background-color #aaaa
  padding 6px

wiki-flex
  display -webkit-flex
  flex-flow row wrap
  align-items stretch

  min-height 100%

wiki
  min-height 100%

wiki-header
  z-index 3
  width 100%

  display -webkit-flex
  flex-flow row wrap

  background-color #49f

  button
    flex 0 0 1
    color white
    background-color #fff0
  
    &:hover
      background-color #fff3

article-list
  z-index 1
  flex 0 200px
  
  background-color #fefefe
  border-right 20px
  border-image linear-gradient(90deg, #fff0, #fff0 20%, #aaa5) 1 100%
  
  padding 16px

  overflow scroll

  li
    list-style-type none

article
  display -webkit-flex

  align-items stretch
  z-index 2
  
  padding 16px
  flex 1 0

  form
    flex 1 auto
    display -webkit-flex
    flex-flow column wrap

    min-height 100%
    
    input, textarea
      doc-font()
      background-color #fffa
      border none
      
    input
      flex 0 2*font-size
      
    textarea
      flex 1 0