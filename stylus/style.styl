font-size = 18px

doc-font()
	font-family 'Open Sans', serif
	font-weight 300
	font-size font-size

*
	margin 0

body
	doc-font()
	max-width 900px
	margin auto

button
	doc-font()
	display inline-block
	background-color red
	border none
	padding 2px

wiki-container
	display -webkit-flex

wiki-header
	display -webkit-flex
	display block
	background-color green

article-list
	padding 16px
	/* arguments grow shrink basis */
	-webkit-flex 0 1 200px
	height 100%
	overflow scroll
	display block
	background-color gray

article-list li
	list-style-type none

article
	padding 16px
	display block
	-webkit-flex 1 0 auto
	background-color dodgerblue

	form input, textarea
		background-color red
		font-size 18px
		font-family 'Open Sans', serif